# EditorConfig - https://editorconfig.org
root = true

# All files
[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# C# files
[*.cs]
indent_size = 4

# Unity shaders
[*.shader]
indent_size = 4

# Unity HLSL
[*.hlsl]
indent_size = 4

# JSON files
[*.json]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false

# Unity meta files
[*.meta]
indent_size = 2
